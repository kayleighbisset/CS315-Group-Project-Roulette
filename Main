        result = wheel.spin()
            print(f"Wheel landed on {fmt_pocket(result)} ({get_color(result)})")

            if result in (0, -1):
                money -= bet_Amnt
                print("0/00 – House wins.")
            else:
                if (even_Odd_Choice == "E" and result % 2 == 0) or (even_Odd_Choice == "O" and result % 2 == 1):
                    money += bet_Amnt * 1   # MULTIPLE ADDED ✅
                    print("You WIN!")
                else:
                    money -= bet_Amnt
                    print("You lost.")
   
    elif bet_Choice == 3:
